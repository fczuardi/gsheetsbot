{
  "name": "gsheetsbot",
  "version": "0.1.0",
  "description": "A Telegram bot with a Google Sheets backend",
  "main": "src/bot.js",
  "repository": {
    "url": "git@github.com:fczuardi/gsheetsbot.git",
    "type": "git"
  },
  "author": "Fabricio C Zuardi <fabricio@fabricio.org>",
  "license": "MIT",
  "scripts": {
    "dev:api": "pm2 start src/api.js --name api --watch",
    "dev:bot": "pm2 start src/bot.js --name bot --watch",
    "logs": "pm2 logs",
    "stop:api": "pm2 stop api",
    "restart:api": "pm2 restart api",
    "stop:bot": "pm2 stop bot",
    "restart:bot": "pm2 restart bot",
    "start": "node src/bot.js"
  },
  "dependencies": {
    "express": "^4.14.0",
    "google-auth-library": "^0.9.9",
    "googleapis": "^14.1.0",
    "telegraf": "^3.3.0",
    "toml-require": "^1.1.0",
    "xtend": "^4.0.1"
  },
  "eslintConfig": {
    "extends": "mnmo",
    "rules": {
      "array-bracket-spacing": [
        "error",
        "always"
      ]
    }
  },
  "devDependencies": {
    "eslint": "^3.9.1",
    "eslint-config-mnmo": "^2.0.2",
    "pm2": "^2.0.19"
  }
}
